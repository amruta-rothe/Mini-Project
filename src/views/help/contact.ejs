<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= pageTitle %> - AttendanceMS</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    body {
      background-color: #f8f9fa;
      font-family: 'Inter', sans-serif;
    }

    .help-header {
      background: var(--primary-gradient);
      color: white;
      padding: 3rem 0 2rem;
      margin-bottom: 2rem;
    }

    .contact-card {
      background: white;
      border-radius: 15px;
      padding: 2rem;
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
      margin-bottom: 2rem;
      text-align: center;
      transition: all 0.3s ease;
    }

    .contact-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    }

    .contact-icon {
      width: 80px;
      height: 80px;
      border-radius: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 2rem;
      color: white;
      margin: 0 auto 1.5rem;
    }

    .contact-form {
      background: white;
      border-radius: 15px;
      padding: 2rem;
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .form-control {
      border-radius: 10px;
      border: 2px solid #e9ecef;
      padding: 0.75rem 1rem;
    }

    .form-control:focus {
      border-color: #667eea;
      box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }

    .btn-submit {
      background: var(--primary-gradient);
      border: none;
      border-radius: 10px;
      padding: 0.75rem 2rem;
      font-weight: 600;
    }

    .back-nav {
      position: fixed;
      top: 2rem;
      right: 2rem;
      z-index: 1000;
    }

    @media (max-width: 768px) {
      .back-nav {
        position: relative;
        top: auto;
        right: auto;
        margin-bottom: 1rem;
      }
    }
  </style>
</head>
<body>
  <!-- Navigation -->
  <div class="back-nav">
    <a href="/help" class="btn btn-outline-primary me-2">
      <i class="fas fa-arrow-left me-2"></i>Back to Help
    </a>
    <a href="/dashboard" class="btn btn-primary">
      <i class="fas fa-tachometer-alt me-2"></i>Dashboard
    </a>
  </div>

  <!-- Header -->
  <div class="help-header">
    <div class="container">
      <h1><i class="fas fa-headset me-3"></i>Contact Support</h1>
      <p class="lead">Get help from our support team - we're here to assist you!</p>
    </div>
  </div>

  <div class="container">
    <!-- Contact Methods -->
    <div class="row mb-5">
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="contact-card">
          <div class="contact-icon" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <i class="fas fa-envelope"></i>
          </div>
          <h4>Email Support</h4>
          <p class="text-muted">Get detailed help via email</p>
          <a href="mailto:support@attendancems.com" class="btn btn-outline-primary">
            support@attendancems.com
          </a>
          <div class="mt-3">
            <small class="text-muted">Response time: 24 hours</small>
          </div>
        </div>
      </div>

      <div class="col-lg-4 col-md-6 mb-4">
        <div class="contact-card">
          <div class="contact-icon" style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%);">
            <i class="fab fa-whatsapp"></i>
          </div>
          <h4>WhatsApp Support</h4>
          <p class="text-muted">Quick help via WhatsApp</p>
          <a href="https://wa.me/1234567890" class="btn btn-outline-success" target="_blank">
            +1 (234) 567-8900
          </a>
          <div class="mt-3">
            <small class="text-muted">Available: 9 AM - 6 PM</small>
          </div>
        </div>
      </div>

      <div class="col-lg-4 col-md-6 mb-4">
        <div class="contact-card">
          <div class="contact-icon" style="background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);">
            <i class="fas fa-phone"></i>
          </div>
          <h4>Phone Support</h4>
          <p class="text-muted">Speak directly with our team</p>
          <a href="tel:+1234567890" class="btn btn-outline-warning">
            +1 (234) 567-8900
          </a>
          <div class="mt-3">
            <small class="text-muted">Mon-Fri: 9 AM - 6 PM EST</small>
          </div>
        </div>
      </div>
    </div>

    <!-- Support Form -->
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div class="contact-form">
          <h3 class="mb-4"><i class="fas fa-paper-plane me-2"></i>Send us a Message</h3>
          
          <form id="supportForm">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="name" class="form-label">Your Name</label>
                <input type="text" class="form-control" id="name" required value="<%= user.name %>">
              </div>
              <div class="col-md-6 mb-3">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" class="form-control" id="email" required value="<%= user.email %>">
              </div>
            </div>

            <div class="mb-3">
              <label for="subject" class="form-label">Subject</label>
              <select class="form-control" id="subject" required>
                <option value="">Select a topic...</option>
                <option value="login-issues">Login Issues</option>
                <option value="attendance-problems">Attendance Problems</option>
                <option value="csv-import">CSV Import Issues</option>
                <option value="notifications">Notification Problems</option>
                <option value="reports">Report Generation</option>
                <option value="account-settings">Account Settings</option>
                <option value="feature-request">Feature Request</option>
                <option value="bug-report">Bug Report</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div class="mb-3">
              <label for="priority" class="form-label">Priority Level</label>
              <select class="form-control" id="priority" required>
                <option value="low">Low - General question</option>
                <option value="medium">Medium - Need help soon</option>
                <option value="high">High - Blocking my work</option>
                <option value="urgent">Urgent - System down</option>
              </select>
            </div>

            <div class="mb-3">
              <label for="message" class="form-label">Describe your issue</label>
              <textarea class="form-control" id="message" rows="6" required 
                        placeholder="Please provide as much detail as possible about your issue..."></textarea>
            </div>

            <div class="mb-3">
              <label for="screenshot" class="form-label">Attach Screenshot (Optional)</label>
              <input type="file" class="form-control" id="screenshot" accept="image/*">
              <div class="form-text">Screenshots help us understand your issue better</div>
            </div>

            <div class="mb-3 form-check">
              <input type="checkbox" class="form-check-input" id="updates" checked>
              <label class="form-check-label" for="updates">
                Send me updates about this support request
              </label>
            </div>

            <button type="submit" class="btn btn-submit text-white">
              <i class="fas fa-paper-plane me-2"></i>
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Additional Resources -->
    <div class="row mt-5">
      <div class="col-12">
        <div class="contact-form">
          <h4><i class="fas fa-lightbulb me-2"></i>Before You Contact Us</h4>
          <p>You might find your answer faster by checking these resources:</p>
          
          <div class="row">
            <div class="col-md-3 col-6 mb-3">
              <a href="/help/faq" class="btn btn-outline-primary w-100">
                <i class="fas fa-question-circle mb-2 d-block"></i>
                Check FAQs
              </a>
            </div>
            <div class="col-md-3 col-6 mb-3">
              <a href="/help/troubleshooting" class="btn btn-outline-warning w-100">
                <i class="fas fa-tools mb-2 d-block"></i>
                Troubleshooting
              </a>
            </div>
            <div class="col-md-3 col-6 mb-3">
              <a href="/help/videos" class="btn btn-outline-success w-100">
                <i class="fas fa-play-circle mb-2 d-block"></i>
                Video Tutorials
              </a>
            </div>
            <div class="col-md-3 col-6 mb-3">
              <a href="/help/how-to" class="btn btn-outline-info w-100">
                <i class="fas fa-book mb-2 d-block"></i>
                How-To Guides
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Handle form submission
    document.getElementById('supportForm').addEventListener('submit', function(e) {
      e.preventDefault();
      
      // Get form data
      const formData = new FormData();
      formData.append('name', document.getElementById('name').value);
      formData.append('email', document.getElementById('email').value);
      formData.append('subject', document.getElementById('subject').value);
      formData.append('priority', document.getElementById('priority').value);
      formData.append('message', document.getElementById('message').value);
      formData.append('updates', document.getElementById('updates').checked);
      
      const screenshot = document.getElementById('screenshot').files[0];
      if (screenshot) {
        formData.append('screenshot', screenshot);
      }

      // Show loading state
      const submitBtn = document.querySelector('.btn-submit');
      const originalText = submitBtn.innerHTML;
      submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Sending...';
      submitBtn.disabled = true;

      // Simulate form submission (replace with actual API call)
      setTimeout(() => {
        alert('Thank you! Your support request has been submitted. We\'ll get back to you within 24 hours.');
        
        // Reset form
        document.getElementById('supportForm').reset();
        
        // Reset button
        submitBtn.innerHTML = originalText;
        submitBtn.disabled = false;
      }, 2000);
    });

    // Auto-fill subject based on current page referrer
    window.addEventListener('load', function() {
      const referrer = document.referrer;
      const subjectSelect = document.getElementById('subject');
      
      if (referrer.includes('attendance')) {
        subjectSelect.value = 'attendance-problems';
      } else if (referrer.includes('import')) {
        subjectSelect.value = 'csv-import';
      } else if (referrer.includes('login')) {
        subjectSelect.value = 'login-issues';
      }
    });
  </script>
</body>
</html>